        <Label Content="Название:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="431,244,0,0" VerticalAlignment="Top" Height="60" Width="198" Foreground="White" FontSize="36"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Margin="629,244,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="544" FontSize="36"/>
        <Label Content="Город:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="431,338,0,0" VerticalAlignment="Top" Height="60" Width="198" Foreground="White" FontSize="36"/>
        <TextBox x:Name="City" HorizontalAlignment="Left" Margin="629,338,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="544" FontSize="36"/>
